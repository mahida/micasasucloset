<%= form_tag search_path, method: :get do %>

  <div class="row">
    <div class="col-md-6">
      <%= text_field_tag :search, params[:search], placeholder: "Where will you store your stuff?", class: "form-control" %>
    </div>

    <div class="col-md-2">
      <%= text_field_tag :start_date, params[:start_date], placeholder: "Start Date", class: "form-control" %>
    </div>

    <div class="col-md-2">
      <%= text_field_tag :end_date, params[:end_date], placeholder: "End Date", class: "form-control" %>
    </div>

    <div class="col-md-2">
      <%= submit_tag "Search", class:"btn btn-primary" %>
    </div>
  </div>

<% end %>

<br>

<div class="text-center">
  <h2>Your Summer Storage </h2>
  <p>Discover a new way to store your stuff.</p>
</div>

<br>

<div class="row">
  <div class="col-md-4 col-sm-12">
    <div class="discovery-card" style="background-image: url('/assets/horder.jpg')">
      <div class="va-container">
        <div class="va-middle text-center">
          <h2><strong></strong></h2>
        </div>
      </div>
    </div>
  </div>


  <div class="col-md-4 col-sm-6">
    <div class="discovery-card" style="background-image: url('/assets/main_pic.jpg')">
      <div class="va-container">
        <div class="va-middle text-center">
          <h2><strong></strong></h2>
        </div>
      </div>
    </div>
  </div>


  <div class="col-md-4 col-sm-6">
    <div class="discovery-card" style="background-image: url('/assets/storage.jpg')">
      <div class="va-container">
        <div class="va-middle text-center">
          <h2><strong></strong></h2>
        </div>
      </div>
    </div>
  </div>
</div>

<br>

<div class="text-center">
  <h2>Checkout the Closest Closet Near You!</h2>
  <p>Explore your options.</p>
</div>



<div class="row">
  <% @rooms.each do |room| %>

  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading preview">
        <%= image_tag room.photos[0].image.url(:medium) if room.photos.length > 0 %>
      </div>
      <div class="panel-body">
        <%= image_tag avatar_url(room.user), class:"img-circle avatar-small"%>
        <%= link_to room.listing_name, room %>
      </div>
    </div>
  </div>
  <% end %>
</div>

<script>
  $(function(){
    $("#start_date").datepicker({
      dateFormat: 'dd-mm-yy',
      minDate: 0,
      maxDate: '3m',
      onSelect: function(selected){
        $('#end_date').datepicker("option", "minDate", selected);
        $('#end_date').attr("disabled", false);
      }
    });

    $("#end_date").datepicker({
      dateFormat: 'dd-mm-yy',
      minDate: 0,
      maxDate: '3m',
      onSelect: function(selected){
        $('#start_date').datepicker("option", "maxDate", selected);
      }
    });
  })
</script>
