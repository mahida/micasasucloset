<div class="row">
	<div class="col-md-3">
		<ul class="sidebar-list">
			<li class="sidebar-item"><%= link_to "Your Listings", rooms_path, class: "sidebar-link" %></li>
			<li class="sidebar-item"><%= link_to "Your Reservations", your_reservations_path, class: "sidebar-link" %></li>
			<li class="sidebar-item"><%= link_to "Your Storage", your_storage_path, class: "sidebar-link active" %></li>
		</ul>
	</div>
	<div class="col-md-9">
		<div class="panel panel-default">
			<div class="panel-heading">
				All Your Storage 
			</div>
			<div class="panel-body">
				<% @storage.each do |s| %>
					<div class="row">
						<div class="col-md-2">
							<%= s.start_date.strftime('%v') %>
						</div>
						<div class="col-md-6">
							<%= link_to room_path(s.room) do %>
								<%= image_tag s.room.photos[0].image.url(:thumb) %>
							<% end %>
						</div>
						<div class="col-md-2">
							<%= link_to user_path(s.room.user) do %>
								<%= image_tag avatar_url(s.room.user), class: "img-circle avatar-medium" %>
							<% end %>
						</div>
						<div class="col-md-2 right">
							<h4>$<%= s.total %></h4>
						</div>
					</div>
					<hr>
				<% end %>

			</div>
		</div>
	</div>
</div>
